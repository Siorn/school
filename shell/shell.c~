 * una shell di comando
 */
 
 #include <stdio.h>
 #include <unistd.h>
 #include <string.h>
 
 #define PROMPT "shellpro $ "
 
 int cmpstr(char*s1, char*s2);
 
 int main(){
 
  char* cmd;
  
  printf(PROMPT);
  cmd=input_str();
  
  while(strcmp(cmd,"exit") != 0){
   if(fork()){
    execvp(cmd);
    wait();
   }
   cmd=input_str();
  
  }
 
  return 0;
 }
 
 
 /*compara due stringhe
  *
  */
 int cmpstr(char*s1, char*s2){
  if(*s1>*s2) return(-1);
  if(*s1<*s2) return(+1);
  if(*s1) return(cmpstr(++s1,++s2));
  return(0);
 }